		<Content Include="Deconvolution\Algorithms\IsoDecResources\libmmd.dll">
		  <CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
		<Content Include="Deconvolution\Algorithms\IsoDecResources\phase_model.bin">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
